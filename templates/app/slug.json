{
  "server": {
    "port"  : 9294
  },

  "routes": [
    { "/"        : "./public" },
    { "/test"    : "./test/public" }
  ],

  "packages": {
    "appName": {
      "libs"    : [],
      "modules" : [
        "es5-shimify",
        "json2ify",
        "jqueryify",
        "spine",
        "spine/lib/local",
        "spine/lib/route",
        "spine/lib/manager"
      ],
      "paths"  : ["./app"],
      "target" : "./public/application.js",
    },
    "css": {
      "paths"  : "./css",
      "target" : "./public/application.css"
    },
    "test": {
      "identifier" : "specs",
      "jsAfter"    : "require('lib/setup'); for (var key in specs.modules) specs(key);",
      "paths"      : ["./test/specs"],
      "target"     : "./test/public/specs.js"
    }
  }
}
